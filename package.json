{
	"name": "@acdh-oeaw/stylelint-config",
	"version": "1.0.7",
	"license": "MIT",
	"type": "module",
	"main": "./stylelint.config.js",
	"files": [
		"./stylelint.config.js"
	],
	"packageManager": "pnpm@8.12.1",
	"scripts": {
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check types:check"
	},
	"dependencies": {
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-hudochenkov": "^10.0.0",
		"stylelint-config-standard": "^35.0.0"
	},
	"peerDependencies": {
		"stylelint": ">=16"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^18.4.3",
		"lint-staged": "^15.2.0",
		"npm-run-all2": "^6.1.1",
		"prettier": "^3.1.1",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^16.0.2",
		"typescript": "^5.3.3"
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"lint-staged": {
		"*": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
